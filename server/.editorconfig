root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
tab_width = 3
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx}]
indent_style = tab
tab_width = 3

[*.{json,yml,yaml}]
indent_style = tab
tab_width = 3

[*.md]
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_style = tab
tab_width = 3

[*.sql]
indent_style = tab
tab_width = 3

[Makefile]
indent_style = tab